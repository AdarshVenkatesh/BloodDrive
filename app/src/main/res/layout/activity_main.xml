<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerlayout"
    tools:context="com.example.harika.blooddriveah.MainActivity">

    <RelativeLayout
         android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/request_donate_bg"
        android:id="@+id/replace_layout">

        <Button
            android:id="@+id/requestbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:text="Request"
            android:background="#F4511E"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/donatebutton"
            android:layout_marginBottom="74dp" />

        <Button
            android:id="@+id/donatebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:text="Donate"
            android:background="#F4511E"
            android:layout_above="@+id/requestbutton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="60dp"
            android:width="80dp"
            android:text="BE A HERO GIVE BLOOD"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/activity_navigation_drawer_drawer"
        android:layout_gravity="start">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
