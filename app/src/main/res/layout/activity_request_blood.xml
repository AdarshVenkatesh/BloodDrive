<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.harika.blooddriveah.RequestBlood">


    <Button
        android:id="@+id/APositive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="A+"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/request_blood_circle"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/ANegative"
        android:layout_marginEnd="75dp" />

    <Button
        android:id="@+id/ANegative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="66dp"
        android:text="A-"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/request_blood_circle"
        android:layout_alignBaseline="@+id/APositive"
        android:layout_alignBottom="@+id/APositive"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/BPositive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="B+"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/request_blood_circle"
        android:layout_below="@+id/APositive"
        android:layout_alignStart="@+id/APositive" />

    <Button
        android:id="@+id/BNegative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ANegative"
        android:layout_alignTop="@+id/BPositive"
        android:text="B-"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/request_blood_circle" />

    <Button
        android:id="@+id/ABPositive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="AB+"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/request_blood_circle"
        android:layout_below="@+id/BPositive"
        android:layout_alignStart="@+id/BPositive" />

    <Button
        android:id="@+id/ABNegative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AB-"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/request_blood_circle"
        android:layout_alignBaseline="@+id/ABPositive"
        android:layout_alignBottom="@+id/ABPositive"
        android:layout_alignStart="@+id/BNegative" />

    <Button
        android:id="@+id/OPositive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="O+"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/request_blood_circle"
        android:layout_below="@+id/ABPositive"
        android:layout_alignStart="@+id/ABPositive" />

    <Button
        android:id="@+id/ONegative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ABNegative"
        android:layout_alignTop="@+id/OPositive"
        android:text="O-"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/request_blood_circle" />
</RelativeLayout>
