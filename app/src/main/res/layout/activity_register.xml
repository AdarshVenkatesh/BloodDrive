<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_bg"
    >
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="30sp"
        android:textStyle="italic"
        android:layout_marginLeft="25dp"
        android:text="Just one more step!"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/edit_text_firstName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@android:color/white"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:padding="14dp"
        android:textColor="#616161"
        android:textColorHint="#AEAEAE"
        android:textSize="15.3sp"
        android:layout_above="@+id/edit_text_lastName"
        />
    <EditText
        android:id="@+id/edit_text_lastName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@android:color/white"
        android:hint="Last Name"
        android:inputType="textPersonName"

        android:padding="14dp"
        android:textColor="#616161"
        android:textColorHint="#AEAEAE"
        android:textSize="15.3sp"
        android:layout_above="@+id/edit_text_email"
        />
    <EditText
        android:id="@+id/edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:background="@android:color/white"
        android:hint="Email"
        android:inputType="textEmailAddress"

        android:padding="14dp"
        android:textColor="#616161"
        android:textColorHint="#AEAEAE"
        android:textSize="15.3sp"
        android:layout_above="@+id/edit_text_password"
        android:layout_marginBottom="10dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/edit_text_password"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@android:color/white"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="14dp"
        android:textColor="#616161"
        android:textColorHint="#AEAEAE"
        android:textSize="15.3sp"

        android:layout_above="@+id/edit_text_retyppepassword"
        android:layout_marginBottom="14dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/edit_text_retyppepassword"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@android:color/white"
        android:hint="Re-Type password"
        android:inputType="textPassword"
        android:padding="14dp"
        android:textColor="#616161"
        android:textColorHint="#AEAEAE"
        android:textSize="15.3sp"

        android:layout_marginBottom="10dp"
        android:layout_above="@+id/edit_text_bloodgroup" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/edit_text_bloodgroup"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@android:color/white"


        android:layout_marginBottom="10dp"
        android:layout_above="@+id/edit_text_contactnumber"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/edit_text_contactnumber"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@android:color/white"
        android:hint="Contact Number"
        android:inputType="text|phone"
        android:padding="14dp"
        android:textColor="#616161"
        android:textColorHint="#AEAEAE"
        android:textSize="15.3sp"

        android:layout_marginBottom="61dp"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:id="@+id/signmeup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Me Up"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/edit_text_contactnumber"
        android:layout_marginStart="104dp"
        android:background="@drawable/button_shape"/>


</RelativeLayout>
